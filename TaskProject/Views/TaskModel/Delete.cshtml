@model TaskModel

<div class="container mt-4">
    <h1>@Model.TaskModelName Delete confirmation</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form asp-action="Delete">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="TaskModelName" class="form-label">Task Name</label>
                    <input asp-for="TaskModelName" class="form-control" readonly />
                    <span asp-validation-for="TaskModelName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TaskModelDescription" class="form-label">Description</label>
                    <input asp-for="TaskModelDescription" class="form-control" readonly />
                    <span asp-validation-for="TaskModelDescription" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input type="hidden" asp-for="TaskModelId" />
                    <input type="submit" value="Confirm" class="btn btn-danger" />
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>