@model TaskModel

<div class="container mt-4">
    <h1>@Model.TaskModelName Details</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <label asp-for="TaskModelName" class="form-label">Task Name</label>
                    <input asp-for="TaskModelName" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="TaskModelDescription" class="form-label">Description</label>
                    <input asp-for="TaskModelDescription" class="form-control" readonly />
                </div>
                <div class="mb-3">
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>
