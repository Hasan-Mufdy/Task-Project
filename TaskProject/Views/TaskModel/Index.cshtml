@model List<TaskProject.Models.TaskModel>

@if (Model != null)
{
    <div class="container mt-4">
        <ul class="list-group">
            <h1>Tasks list:</h1>
            @foreach (var task in Model)
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3>@task.TaskModelName</h3>
                        </div>
                        <div>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@task.TaskModelId"><i class="bi bi-pencil-square"></i>Edit </a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@task.TaskModelId"><i class="bi bi-eye"></i>Details </a>
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@task.TaskModelId"><i class="bi bi-trash"></i>Delete </a>
                        </div>
                    </div>
                </li>
            }
        </ul>
        <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
            <a asp-controller="TaskModel" asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add a new task
            </a>
        </div>
    </div>
}
else
{
    <p>No tasks are available.</p>
}